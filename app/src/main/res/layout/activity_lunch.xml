<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:clickable="true"
    android:layout_height="match_parent"
    android:id="@+id/lunchlayout"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

  tools:context="com.example.android.reminder.Breakfast">

  <TextView
      android:id="@+id/itemView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_alignParentLeft="true"
      android:layout_alignParentTop="true"
      android:layout_marginStart="49dp"
      android:layout_marginLeft="49dp"
      android:layout_marginTop="74dp"
      android:text="Lunch:"
      android:textSize="18dp"
      android:textColor="#000000"/>

  <TextView
      android:id="@+id/dateView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_alignParentLeft="true"
      android:layout_alignParentTop="true"
      android:layout_marginStart="49dp"
      android:layout_marginLeft="49dp"
      android:layout_marginTop="135dp"
      android:text="Date:"
      android:textSize="18dp"
      android:textColor="#000000"/>

  <Button
      android:id="@+id/button_save"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_alignParentLeft="true"
      android:layout_alignParentTop="true"
      android:layout_marginStart="60dp"
      android:layout_marginLeft="60dp"
      android:layout_marginTop="230dp"
      android:text="save" />

  <Button
      android:id="@+id/button_view"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:layout_marginTop="230dp"
      android:layout_marginEnd="100dp"
      android:layout_marginRight="100dp"
      android:text="view" />

  <Button
      android:id="@+id/button_delete"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:layout_marginTop="421dp"
      android:layout_marginEnd="157dp"
      android:layout_marginRight="157dp"
      android:text="DELETE" />


  <EditText
      android:id="@+id/editText_item"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_alignParentLeft="true"
      android:layout_alignParentTop="true"
      android:layout_marginStart="154dp"
      android:layout_marginLeft="154dp"
      android:layout_marginTop="62dp"
      android:ems="10"
      android:inputType="textPersonName"
      android:hint="Item" />

  <EditText
      android:id="@+id/editText_date"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_alignParentLeft="true"
      android:layout_alignParentTop="true"
      android:layout_marginStart="154dp"
      android:layout_marginLeft="154dp"
      android:layout_marginTop="122dp"
      android:ems="10"
      android:inputType="textPersonName"
      android:hint="click to select date"
      />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="horizontal">

    <TextView
        android:id="@+id/idView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="72dp"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="348dp"
        android:text="Id:"
        android:textSize="18dp"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/editText_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"

        android:layout_marginLeft="65dp"
        android:layout_marginTop="350dp"
        android:clickable="true"
        android:ems="10"

        android:hint="Enter id to delete data" />


  </LinearLayout>

  android:textAppearance="@style/TextAppearance.AppCompat.Large"/>



</RelativeLayout>